.keyboard-wrapper {
  position: fixed;
  width: 100%;
  max-width: 750px;
  bottom: 0;
  left: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  background-color: #FFFFFF;
}
.keyboard-wrapper .kb-text {
  height: 70rpx;
  width: 16.6666666666666%;
  text-align: center;
  line-height: 70rpx;
  font-size: 40rpx;
  font-weight: blod;
  box-sizing: border-box;
  border: 4rpx solid #f0f0f0;
  border-radius: 4rpx;
}
.keyboard-wrapper .kb-submit {
  width: 33.33333%;
  color: #FFF;
  background-color: #0d828e;
}
.include {
  color: #FFF;
  background-color: #de7525;
}
.right {
  color: #FFF;
  background-color: #1d9c9c;
}
.except {
  color: #FFF;
  background-color: #5d6673;
}

